<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="ApiBundle\Entity\Item" table="item">
    <indexes>
      <index name="fk_item_checklist_idx" columns="checklist_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="description" type="text" column="description" nullable="false">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="position" type="integer" column="position" nullable="false">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="checked" type="boolean" column="checked" nullable="true">
      <options>
        <option name="default">0</option>
      </options>
    </field>
    <many-to-one field="checklist" target-entity="Checklist" fetch="LAZY">
      <join-columns>
        <join-column name="checklist_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
